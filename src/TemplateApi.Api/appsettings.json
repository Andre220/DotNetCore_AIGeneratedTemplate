{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "EnableSensitiveDataLogging": false
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=templateapi;Username=postgres;Password=postgres;Include Error Detail=true",
    "Redis": "localhost:6379,abortConnect=false"
  },

  "Jwt": {
    "SecretKey": "SuperSecretKeyThatShouldBeAtLeast32CharactersLong!@#$%",
    "Issuer": "TemplateApi",
    "Audience": "TemplateApi",
    "ExpirationMinutes": 60
  },

  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "seu-email@gmail.com",
    "SmtpPassword": "sua-senha-ou-app-password",
    "FromEmail": "noreply@templateapi.com",
    "FromName": "Template API"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  }
}
